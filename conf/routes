# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST           /createTable/:restaurantName/:name        @controllers.TableController.createTable(name: String, restaurantName: String)

GET           /:id                                      controllers.Application.show(id: Int)
PUT           /:id                                      controllers.Application.update(id: Int)
DELETE        /:id                                      controllers.Application.delete(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                           controllers.Assets.versioned(path="/public", file: Asset)

# Make HTML5 links work
GET     /                                                       controllers.Application.index(any: String ?= "none")
GET     /*any                                                   controllers.Application.index(any: String)
