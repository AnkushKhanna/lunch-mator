# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Restaurant
GET         /rest/restaurants              controllers.RestaurantController.listRestaurants()
GET         /rest/restaurants/:name        controllers.RestaurantController.findRestaurant(name)
POST        /rest/restaurants              controllers.RestaurantController.createRestaurant()

GET         /rest/users                    controllers.UserController.getAllUsers()
POST        /rest/users                    controllers.UserController.createUser()

#REST User session
POST        /rest/login                    controllers.AuthenticationController.authenticate()
POST        /rest/signUp                   controllers.AuthenticationController.signUp()
GET        /rest/logOut                   controllers.AuthenticationController.logOut()


GET         /rest/lunch-tables/:id         controllers.LunchController.getLunchById(id)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
GET         /webjars/*file                 controllers.WebJarAssets.at(file)


# Make HTML5 links work
GET         /                              controllers.Application.secured()
GET         /welcome                       controllers.Application.secured()
GET         /login                         controllers.Application.unSecure()
GET         /registration                  controllers.Application.unSecure()
