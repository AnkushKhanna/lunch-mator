{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "classic",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": "node_modules",
    "rootDir": "app/assets/javascripts",
    "paths": {
      "@angular/core": ["@angular/core/index"],
      "@angular/platform-browser": ["@angular/platform-browser/index"],
      "@angular/platform-browser-dynamic": ["@angular/platform-browser-dynamic/index"],
      "@angular/common": ["@angular/common/index"]
    },
    "outDir": "target/karma/javascripts"
  },
  "exclude": [
    "node_modules",
    ".sass-cache",
    "logs",
    "target",
    "test",
    "project",
    "etc",
    "conf",
    "public"
  ],
  "compileOnSave": false
}
